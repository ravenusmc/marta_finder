@import "bootstrap-sprockets";
@import "bootstrap";

/* General CSS */

body {
  background-color: rgb(245,243,238);
}

.container {
  background-color: rgba(125,25,53,0.5);
  margin-top: 25px;
  margin-bottom: 25px;
  padding-bottom: 10px;
  border-radius: 10px;
}

.navbar-inverse {
  margin: -10px ;
}

/* CSS on Index Page */ 

.jumbotron {
  text-align: center;
  height: 600px;
  background-image: image-url("bus.jpg");
  background-size: 100% 100%;
}

.banner {
  background-position: top left, center center;
  background-repeat: repeat, no-repeat;
  background-size: auto, cover;
  color: #fff;
  padding: 12em 0;
  position: relative;
  text-align: center
}

.inner {
  display: inline-block;
  background: rgba(29,39,38,0.7);
  position: relative;
  z-index: 2;
  padding: 25px 25px 25px 25px;
  text-align: center;
}

.h3_jumbo {
  text-transform: uppercase;
}

.row_fix {
  padding-top: 50px;
}

.home_panel {
  text-align: center;
}

/* CSS on Location-New Page */

.new_top {
  background-color: rgb(74,150,173);
  text-align: center;
  text-transform: uppercase;
}

/* CSS on Location-Show Page */

.bus-map {
	width: 250px;
	height: 250px;
}